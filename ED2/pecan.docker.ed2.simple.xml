<?xml version="1.0"?>
<pecan>
  <outdir>/data/tests/ed2</outdir>
  <database>
    <bety>
      <driver>PostgreSQL</driver>
      <user>bety</user>
      <password>bety</password>
      <host>postgres</host>
      <dbname>bety</dbname>
      <write>FALSE</write>
    </bety>
    <dbfiles>/data/tests/ed2/dbfiles</dbfiles>
  </database>
  <pfts>
    <pft>
      <name>SetariaWT</name>
      <ed2_pft_number>1</ed2_pft_number>
    </pft>
    <pft>
      <name>ebifarm.c3grass</name>
      <ed2_pft_number>5</ed2_pft_number>
    </pft>
  </pfts>

  <meta.analysis>
    <iter>3000</iter>
    <random.effects>TRUE</random.effects>
    <threshold>1.2</threshold>
    <update>TRUE</update>
  </meta.analysis>

  <ensemble>
    <size>10</size>
    <variable>NPP</variable>
    <samplingspace>
      <parameters>
        <method>lhc</method>
      </parameters>
  </samplingspace>
  </ensemble>

  <sensitivity.analysis>
      <quantiles>
          <sigma>-1</sigma>
          <sigma>1</sigma>
      </quantiles>
    <variable>NPP</variable>
  </sensitivity.analysis>

  <model>
    <type>ED2</type>
    <binary>/groups/dlebauer/ed2_results/global_inputs/ed2_2.2.0_singularity.sh</binary>
    <id>14</id>
    <edin>/pecan/models/ed/inst/ED2IN.r2.2.0</edin>
    <config.header>
      <radiation>
        <lai_min>0.01</lai_min>
      </radiation>
      <ed_misc>
        <output_month>12</output_month>
      </ed_misc>
    </config.header>
    <phenol.scheme>0</phenol.scheme>
    <ed2in_tags>
      <PFT_1ST_CHECK>2</PFT_1ST_CHECK>
      <IED_INIT_MODE>0</IED_INIT_MODE>
    </ed2in_tags>
  </model>

  <run>
    <site>
      <id>76</id>
      <met.start>2004-04-01 00:00:00</met.start>
      <met.end>2004-08-31 23:59:59</met.end>
    </site>

    <inputs>
      <met>/data/sites/ebifarm/ED_MET_DRIVER_HEADER</met>
      <veg>/data/oge2OLD/OGE2_</veg>
      <soil>/data/faoOLD/FAO_</soil>
      <pss>/data/sites/ebifarm/ebifarm.lat40.0lon-88.0.pss</pss>
      <css>/data/sites/ebifarm/ebifarm.lat40.0lon-88.0.css</css>
      <site>/data/sites/ebifarm/ebifarm.lat40.0lon-88.0.site</site>
      <lu>/data/ed_inputs/glu/</lu>
      <thsum>/data/ed_inputs/</thsum>
    </inputs>

    <start.date>2004/04/01</start.date>
    <end.date>2004/08/31</end.date>
  </run>
  
  <host>
      <name>login.ocelote.hpc.arizona.edu</name>
      <user>kristinariemer</user>
      <folder>/groups/dlebauer/ed2_results/pecan_remote</folder>
      <qsub>qsub -N @NAME@ -W group_list=dlebauer -l select=1:ncpus=24:mem=144gb -l walltime=02:00:00 -o @STDOUT@ -e @STDERR@ -S /bin/bash</qsub>
      <qsub.jobid>([0-9]+).head1.cm.cluster</qsub.jobid>
      <qstat>'qstat -J @JOBID@ &amp;> /dev/null || echo DONE'</qstat>
      <job.sh>module load openmpi</job.sh>
      <modellauncher>
        <binary>/groups/dlebauer/ed2_results/pecan/contrib/modellauncher/modellauncher</binary>
        <qsub.extra>-q standard</qsub.extra>
      </modellauncher>
  </host>

</pecan>